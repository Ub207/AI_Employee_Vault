# Gold-tier Backend Environment Variables — Digital FTE
# Copy this file to .env and fill in your credentials.
# NEVER commit .env to version control.

# ─── Database ────────────────────────────────────────────────────────────────
DATABASE_URL=sqlite+aiosqlite:///./backend/vault.db
# For production use PostgreSQL:
# DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/fte_db

# ─── Agent Settings ──────────────────────────────────────────────────────────
VAULT_PATH=.
AUTONOMY_LEVEL=MEDIUM          # LOW / MEDIUM / HIGH
SENSITIVITY_THRESHOLD=0.6
AUTONOMY_MODE=false            # true bypasses approval checks

# ─── Gmail OAuth2 ────────────────────────────────────────────────────────────
# Get credentials from: https://console.cloud.google.com/ → APIs & Services
GMAIL_CLIENT_ID=
GMAIL_CLIENT_SECRET=
GMAIL_REDIRECT_URI=http://localhost:8000/integrations/gmail/callback

# Gmail polling / auto-reply
GMAIL_POLL_INTERVAL_SECONDS=300
GMAIL_AUTO_REPLY_ENABLED=false
GMAIL_MAX_EMAILS_PER_POLL=10

# ─── LinkedIn OAuth2 ─────────────────────────────────────────────────────────
# Get credentials from: https://www.linkedin.com/developers/apps
LINKEDIN_CLIENT_ID=
LINKEDIN_CLIENT_SECRET=
LINKEDIN_REDIRECT_URI=http://localhost:8000/integrations/linkedin/callback
LINKEDIN_POLL_INTERVAL_SECONDS=300

# ─── WhatsApp / Twilio ───────────────────────────────────────────────────────
# Get credentials from: https://www.twilio.com/console
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=
WHATSAPP_WEBHOOK_URL=          # Set to your public ngrok/prod URL for signature validation
WHATSAPP_AUTO_REPLY_ENABLED=true
WHATSAPP_POLL_INTERVAL_SECONDS=120
WHATSAPP_MAX_MESSAGES_PER_POLL=20

# ─── Facebook / Instagram (Graph API) ────────────────────────────────────────
# Create an app at: https://developers.facebook.com/apps/
# Required permissions: pages_manage_posts, pages_read_engagement,
#   instagram_basic, instagram_content_publish
FACEBOOK_APP_ID=
FACEBOOK_APP_SECRET=
FACEBOOK_PAGE_ID=              # Numeric ID of your Facebook Page
FACEBOOK_REDIRECT_URI=http://localhost:8000/integrations/facebook/callback
INSTAGRAM_ACCOUNT_ID=          # Numeric ID of your Instagram Business account

# ─── Twitter / X (OAuth 2.0 PKCE) ───────────────────────────────────────────
# Create an app at: https://developer.twitter.com/en/portal/dashboard
# Required scopes: tweet.read tweet.write users.read offline.access
TWITTER_CLIENT_ID=
TWITTER_CLIENT_SECRET=
TWITTER_REDIRECT_URI=http://localhost:8000/integrations/twitter/callback

# ─── CORS ───────────────────────────────────────────────────────────────────
CORS_ORIGINS=http://localhost:3000,http://localhost:8000
