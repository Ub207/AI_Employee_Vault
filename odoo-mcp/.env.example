# Odoo MCP Server — Environment Variables
# Copy to .env and fill in your Odoo instance details.

# Odoo instance URL (local or cloud)
ODOO_URL=http://localhost:8069

# Odoo database name (check Settings → Databases)
ODOO_DB=mycompany

# Odoo admin credentials (use a dedicated API user in production)
ODOO_USERNAME=admin
ODOO_PASSWORD=admin

# Vault path for HITL approval files
VAULT_PATH=../

# MCP server port
MCP_PORT=8010
